create table EMPLEADOS(
    IDENTIFICACION VARCHAR(15),
    NOMBRES VARCHAR(30),
    APELLIDOS VARCHAR(30),
    EMAIL VARCHAR(30),
    TIPO_CONTRATACION VARCHAR(20),
    TIPO_EMPLEADO VARCHAR(20),
    COD_FACULTAD INTEGER,
    COD_SEDE INTEGER,
    LUGAR_NACIMIENTO INTEGER,
    CONSTRAINT EMPLEADOS_PK PRIMARY KEY (IDENTIFICACION),
    CONSTRAINT EMP_TIPOS_CONTRATACION_FK FOREIGN KEY (TIPO_CONTRATACION) REFERENCES TIPOS_CONTRATACION,
    CONSTRAINT EMPLEADOS_TIPOS_EMPLEADOS_FK FOREIGN KEY (TIPO_EMPLEADO) REFERENCES TIPOS_EMPLEADOS,
    CONSTRAINT EMPLEADOS_SEDES_FK FOREIGN KEY (COD_SEDE) REFERENCES SEDES,
    CONSTRAINT EMPLEADOS_CIUDADES_FK FOREIGN KEY (LUGAR_NACIMIENTO) REFERENCES CIUDADES
);
ALTER TABLE EMPLEADOS
    ADD CONSTRAINT EMPLEADOS_FACULTADES_FK
        FOREIGN KEY (COD_FACULTAD)
            REFERENCES FACULTADES;

CREATE TABLE FACULTADES(
    CODIGO INTEGER ,
    NOMBRE varchar(20),
    UBICACION varchar(15),
    NRO_TELEFONO varchar(15),
    ID_DECANO varchar(15),

    CONSTRAINT FACULTADES_PK PRIMARY KEY (CODIGO),
    CONSTRAINT FACULTADES_EMPLEADOS_FK FOREIGN KEY (ID_DECANO)  REFERENCES EMPLEADOS
);
CREATE INDEX FACULTADES_IDX ON FACULTADES(ID_DECANO);


CREATE TABLE PROGRAMAS(
    CODIGO INTEGER,
    NOMBRE varchar(20),
    AREAS_CODIGO INTEGER,
    CONSTRAINT PROGRAMAS_PK PRIMARY KEY (CODIGO)
);
ALTER TABLE PROGRAMAS
    ADD CONSTRAINT PROGRAMAS_AREA_FK
        FOREIGN KEY (AREAS_CODIGO)
            REFERENCES AREAS (CODIGO);


CREATE TABLE AREAS(
    CODIGO INTEGER,
    NOMBRE varchar(20),
    FACULTADES_CODIGO INTEGER,
    ID_COORDINADOR varchar(15),
    CONSTRAINT AREAS_PK PRIMARY KEY (CODIGO),
    CONSTRAINT AREAS_FACULTADES_FK FOREIGN KEY (FACULTADES_CODIGO) REFERENCES FACULTADES,
    CONSTRAINT AREAS_EMPLEADOS_FK FOREIGN KEY (ID_COORDINADOR)  REFERENCES EMPLEADOS
);
CREATE INDEX AREAS_IDX ON AREAS (ID_COORDINADOR);



CREATE TABLE PAISES(
    CODIGO INTEGER,
    NOMBRE varchar(20),
    CONSTRAINT PAISES_PK PRIMARY KEY (CODIGO)
);
CREATE TABLE TIPOS_EMPLEADOS(
  NOMBRE varchar(20),
  CONSTRAINT TIPOS_EMPLEADO_PK PRIMARY KEY (NOMBRE)
);

CREATE TABLE TIPOS_CONTRATACION(
 NOMBRE varchar(20),
 CONSTRAINT TIPOS_CONTRATACION_PK PRIMARY KEY (NOMBRE)
);


CREATE TABLE DEPARTAMENTOS(
    CODIGO INTEGER,
    NOMBRE varchar(20),
    COD_PAIS INTEGER,
    CONSTRAINT DEPARTAMENTOS_PK PRIMARY KEY (CODIGO),
    CONSTRAINT DEPARTAMENTOS_PAISES_FK FOREIGN KEY (COD_PAIS) REFERENCES PAISES
);

CREATE TABLE CIUDADES(
    CODIGO INTEGER,
    NOMBRE varchar(20),
    COD_DPTO INTEGER,
    CONSTRAINT CIUDADES_PK PRIMARY KEY (CODIGO),
    CONSTRAINT CIUDAD_DEPARTAMENTOS_FK FOREIGN KEY (COD_DPTO)   REFERENCES DEPARTAMENTOS
);


CREATE TABLE SEDES(
    CODIGO INTEGER,
    NOMBRE VARCHAR(20),
    COD_CIUDAD INTEGER,

    CONSTRAINT SEDES_PK PRIMARY KEY (CODIGO),
    CONSTRAINT SEDES_CIUDADES_FK FOREIGN KEY (COD_CIUDAD) REFERENCES CIUDADES
);